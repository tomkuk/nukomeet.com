#!/usr/bin/env ruby

require 'set'

preprocess do
  tags = Set.new
  authors = Set.new

  items.each do |item|
    tags.merge(item[:tags] || ['business', 'programming', 'innovation', 'society', 'technology', 'web', 'meetup'])
    authors.merge(item[:authors] || [])
  end

  tags.each do |tag|
    items << Nanoc::Item.new("", { tag: tag }, "/nulog/#{tag}/")
  end

  authors.each do |author|
    items << Nanoc::Item.new("", { author: author }, "/nulog/#{author}/")
  end
end

passthrough '/assets/fonts/*'

compile '/assets/stylesheets/(styles|ie)/' do
  filter :less
  filter :rainpress
end

compile '/assets/fonts/*/' do
end

compile '/assets/javascripts/*/' do
  filter :uglify_js
end

compile '/assets/images/*/' do
end

compile '/nulog/(business|programming|innovation|society|technology|web|meetup)/' do
  layout 'blog'
  layout 'default'
end

compile '/nulog/(zaiste|albanlv|julien|adrien|tukan|tomkuk|kasia|adam)/' do
  layout 'author'
  layout 'default'
end

compile '/nulog/' do
  filter :slim
  layout 'default'
end

compile '/blog/*/' do
  filter :rdiscount, :extensions => %w( strict smart )
  layout 'post'
  layout 'default'
end

compile '/projects/*/' do
  filter :rdiscount, :extensions => %w( strict smart )
  layout 'project'
  layout 'default'
end

compile '/careers/*/' do
  filter :rdiscount, :extensions => %w( strict smart )
  layout 'page'
  layout 'default'
end

compile 'blast' do
  filter :slim
  layout 'default'
end

compile '/contact/' do
  filter :slim
  layout 'default'
end

compile 'sitemap' do
  filter :slim
end

compile '*' do
  ext = item[:extension].nil? ? nil : item[:extension].split('.').last

  if item.binary?
    # donâ€™t filter binary items
  elsif ext == 'md' || ext == 'markdown'
    filter :erb
    filter :rdiscount
    layout 'blog'
    layout 'default'
  elsif ext == 'less'
    # do nothing as it should be filtered somewhere before
  else
    filter :slim
    layout 'default'
  end
end

route '/assets/stylesheets/(styles|ie)' do
  item.identifier.chop + '.css'
end

route '/assets/javascripts/*/' do
  item.identifier.chop + '.js'
end

route '/assets/images/*/' do
  item.identifier.chop + '.' + item[:extension]
end

route '/css/*/' do
  item.identifier.chop + '.css'
end

route '/blog/*/' do
  item.identifier.gsub(%r{^/blog/(\d+)-(\d+)_(.*)$}) do |match|
    "/#{$1}/#{$2}/#{$3}" + 'index.html'
  end
end

route 'sitemap' do
  item.identifier.chop + '.xml'
end

route '*' do
  if item.binary?
    # Write item with identifier /foo/ to /foo.ext
    item.identifier.chop + '.' + item[:extension]
  else
    # Write item with identifier /foo/ to /foo/index.html
    item.identifier + 'index.html'
  end
end

layout '*', :slim
